---
import '../styles/global.css';
const { title } = Astro.props;

// 活动页面路径
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="个人学习Studio - 记录、组织和回顾个人学习历程中的知识点" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - 个人学习Studio` : '个人学习Studio'}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">
    <header class="bg-blue-600 text-white shadow-md">
      <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center mb-4 md:mb-0">
            <a href="/" class="text-2xl font-bold">个人学习Studio</a>
          </div>
          <nav>
            <ul class="flex space-x-6">
              <li>
                <a 
                  href="/" 
                  class={`hover:text-blue-200 ${currentPath === '/' ? 'font-bold border-b-2 border-white pb-1' : ''}`}
                >
                  首页
                </a>
              </li>
              <li>
                <a 
                  href="/blog" 
                  class={`hover:text-blue-200 ${currentPath === '/blog' || currentPath.startsWith('/blog/') ? 'font-bold border-b-2 border-white pb-1' : ''}`}
                >
                  博客文章
                </a>
              </li>
              <li>
                <a 
                  href="/notes" 
                  class={`hover:text-blue-200 ${currentPath === '/notes' || currentPath.startsWith('/notes/') ? 'font-bold border-b-2 border-white pb-1' : ''}`}
                >
                  学习笔记
                </a>
              </li>
              <li>
                <a 
                  href="/about" 
                  class={`hover:text-blue-200 ${currentPath === '/about' ? 'font-bold border-b-2 border-white pb-1' : ''}`}
                >
                  关于
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <main class="flex-grow container mx-auto p-6">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white p-6">
      <div class="container mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <p>&copy; {new Date().getFullYear()} 个人学习Studio</p>
          </div>
          <div class="flex space-x-4">
            <a href="/about" class="hover:text-blue-300">关于</a>
            <a href="/blog" class="hover:text-blue-300">博客</a>
            <a href="/notes" class="hover:text-blue-300">笔记</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>